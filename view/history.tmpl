<div id="{$id}">
	<div class="selectors overflow bordercolor">

		<form id="{$id}-form">
			<select class="selector" id="{$id}-selector" onchange="Todoyu.Ext.daytracks.History.update()">
				{foreach $ranges year months}
					<optgroup label="{$year}">
						{foreach $months number name}
							<option value="{$year}-{$number}" {if $curYear==$year && $curMonth==$number}selected="selected"{/if}>{$name} {$year}</option>
						{/}						
					</optgroup>
				{/foreach}
			</select>
		</form>

		<span class="toggleDetails">
			<a href="#" class="icon {if $details}close{else}open{/if}" onclick="Todoyu.Ext.daytracks.History.toggleDetails()" title="{if $details}{Label daytracks.history.toggledetails.close}{else}{Label daytracks.whistory.toggledetails.open}{/if}">
				<span class="hidden"></span>
			</a>
			<a href="javascript:void(0)" onclick="Todoyu.Ext.daytracks.History.toggleDetails()" title="{if $details}{Label daytracks.history.toggledetails.close}{else}{Label daytracks.history.toggledetails.open}{/if}">
				{if $details}{Label daytracks.history.toggledetails.close}{else}{Label daytracks.history.toggledetails.open}{/if}
			</a>
		</span>
	</div>

	<div id="{$id}-trackings" class="bordercolor">
		<div class="daytrack total bordercolor">
			<strong>{Label daytracks.history.total}: <span>{hour_format $tracking.total}</span></strong>
		</div>
{foreach $tracking.dayTracks timestamp daytracks}
		<div class="daytrack bordercolor {if $details}toggled{else}{cycle values="odd,even"}{/if}">
			{dateFormat $timestamp D2M2Y4}:
			<span>{hour_format $daytracks.total}</span>
		</div>
	{if $details}
		<div class="details">
	{foreach $daytracks.tracks index track}
			<div class="daytrackdetail bordercolor {cycle values="odd,even"}">
				<span class="task">
					<a href="javascript:void(0)" onclick="Todoyu.Ext.daytracks.History.goToTask({$track.task.id})">{$track.task.title} ({$track.task.id_project}.{$track.task.tasknumber})</a>
				</span>
				<span class="time">
					{hour_format $track.workload_tracked}
				</span>
			</div>
	{/foreach}
		</div>
	{/if}
{/foreach}
	</div>
</div>